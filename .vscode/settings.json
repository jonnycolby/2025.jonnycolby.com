{
    "editor.defaultFormatter": "esbenp.prettier-vscode", // sets default for all languages

    // VSCode
    "explorer.compactFolders": false,

    // Editor: format on save
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
    },

    // Editor: tab size
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,

    // Editor: comments
    "editor.comments.ignoreEmptyLines": false,

    // Stylelint
    "stylelint.enable": true,
    "stylelint.validate": ["css", "scss"],
    "stylelint.packageManager": "yarn",

    // ESLint
    "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
    "eslint.workingDirectories": [{ "mode": "auto" }],
    "eslint.format.enable": true,

    // Disable built-in linters for CSS in order to use Stylelint instead:
    "css.validate": false,
    "less.validate": false,
    "scss.validate": false,

    // Code highlights
    "todohighlight.defaultStyle": {
        "color": "rgba(0, 187, 255, 1.0)", // "#00bbff",
        "backgroundColor": "rgba(0, 0, 0, 0.5)",
        "border": "none",
        "outline": "1.5px solid rgba(0, 187, 255, 0.72)",
        //
        // "overviewRulerColor": "#00dd88",
        "cursor": "crosshair", // "progress",
        "borderRadius": "3px",
        "isWholeLine": false
        //other styling properties goes here ...
    },
